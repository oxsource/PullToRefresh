<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_refresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_widget_size"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#8a8a8a"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_refresh_arrow"
            android:layout_width="@dimen/normal_widget_size"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_refresh_text"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_refresh_loading"
            android:layout_width="@dimen/normal_widget_size"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_refresh_text"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_loading"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_refresh_finished"
            android:layout_width="@dimen/normal_widget_size"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_refresh_text"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_success"
            android:visibility="invisible"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_attach_less"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_attach_less"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="#8a8a8a"
            android:textSize="15sp"/>

        <View
            android:id="@+id/v_less_left"
            android:layout_width="90dp"
            android:layout_height="0.1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_attach_less"
            android:background="#8a8a8a"/>

        <View
            android:id="@+id/v_less_right"
            android:layout_width="90dp"
            android:layout_height="0.1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_attach_less"
            android:background="#8a8a8a"/>

    </RelativeLayout>

</RelativeLayout>